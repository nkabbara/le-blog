<h2>Article</h2>
<p>
  <strong>Title:</strong> 
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong> 
  <%= @article.text %>
</p>
<br>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p><%= comment.body %> <i>by</i> <%= comment.commenter %></p>
<% end %>

<h2>Add a comment</h2>

<%= form_for [@article, @article.comments.build] do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <%= f.submit %>
<% end %>
<br>
<%= link_to 'Edit Article', edit_article_path(@article) %>
<br>
<%= link_to 'Back to Articles', articles_path %>
